<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="DataGrid"
           x:Key="DataGridTheme">

        <Setter Property="BorderBrush" Value="#FF3D3B4E" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="RowBackground" Value="Transparent" />
        <Setter Property="AlternatingRowBackground" Value="#22202f" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalGridLinesBrush" Value="#FF3D3B4E" />
        <Setter Property="VerticalGridLinesBrush" Value="#FF3D3B4E" />
        <Setter Property="RowHeight" Value="30" />
        <Setter Property="MaxHeight" Value="300" />
        <Setter Property="FontSize" Value="14" />

    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#22202f" />
        <Setter Property="Height" Value="25" />
    </Style>

</ResourceDictionary>